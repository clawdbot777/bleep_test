# Bleeper – environment variables
# Copy this to .env and fill in your values.
# docker-compose.yml reads from .env automatically.

# ── Plex ─────────────────────────────────────────────────────────────────────
# Your Plex server URL (accessible from the bleeper container)
PLEX_URL=http://plex:32400

# Plex auth token  →  https://support.plex.tv/articles/204059436
PLEX_TOKEN=your_plex_token_here

# The numeric library section ID to refresh after bleeping
# Find it: Plex → your library → … → Manage → Edit → note the number in the URL
PLEX_SECTION_ID=1

# ── (Optional) whisperX tuning ────────────────────────────────────────────────
# WHISPERX_MODEL=large-v3        # tiny / base / small / medium / large-v3
# WHISPERX_LANGUAGE=en
# WHISPERX_BATCH_SIZE=20
# WHISPERX_COMPUTE_TYPE=float16  # float16 (GPU) or int8 (CPU)
